<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/colorAccent"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/currentStateImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Evento"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventNameTxt"
                android:text="Fecha"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/eventTimeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventDateTxt"
                android:text="Hora"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/eventPlaceTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventTimeTxt"
                android:text="Lugar"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/eventStateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventPlaceTxt"
                android:textSize="12sp"
                android:text="Estado" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>